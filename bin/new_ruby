#!/bin/bash

# new_ruby - Create new Ruby project
#
# Creates a new ruby project with bundle and rspec
#
# Usage:
#   new_ruby project_name # Creates under directory project_name

set -e

if [ -n "$1" ]; then
  mkdir "$PWD/$1" && cd "$_"
  bundle init > /dev/null 2>&1
  bundle add rspec
  bundle install
  bundle exec rspec --init
else
  exit 0
fi

